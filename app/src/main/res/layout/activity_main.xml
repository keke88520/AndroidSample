<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.haohaohu.androidsample.activity.MainActivity"
    >

  <TextView
      android:id="@+id/main_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Hello World!"
      />

  <TextView
      android:id="@+id/main_goto_second"
      android:layout_width="match_parent"
      android:layout_height="30dp"
      android:gravity="center"
      android:text="跳转到SecondActivity"
      />

  <TextView
      android:id="@+id/main_goto_linearlayout"
      android:layout_width="match_parent"
      android:layout_height="30dp"
      android:gravity="center"
      android:text="跳转到LinearLayoutActivity"
      />

  <TextView
      android:id="@+id/main_goto_rx"
      android:layout_width="match_parent"
      android:layout_height="30dp"
      android:gravity="center"
      android:text="跳转到RXActivity"
      />

</LinearLayout>
